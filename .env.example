# =============================================
# SUPABASE CONFIGURATION
# =============================================

# Supabase Project URL (from your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key, safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key (private key, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================
# DATABASE CONFIGURATION
# =============================================

# Database URL (for direct connections if needed)
DATABASE_URL=postgresql://postgres:password@db.your-project-id.supabase.co:5432/postgres

# =============================================
# AUTHENTICATION
# =============================================

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-here

# NextAuth URL (your domain in production)
NEXTAUTH_URL=http://localhost:3000

# =============================================
# FILE STORAGE
# =============================================

# Supabase Storage Bucket Names
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET_DOCUMENTS=documents
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET_PHOTOS=photos
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET_AVATARS=avatars

# Maximum file upload sizes (in bytes)
MAX_FILE_SIZE=10485760  # 10MB
MAX_PHOTO_SIZE=5242880  # 5MB

# =============================================
# API CONFIGURATION
# =============================================

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# =============================================
# REAL-TIME FEATURES
# =============================================

# Enable real-time features
NEXT_PUBLIC_ENABLE_REALTIME=true

# WebSocket connection settings
NEXT_PUBLIC_WS_URL=wss://your-project-id.supabase.co/realtime/v1/websocket

# =============================================
# MAPPING & LOCATION SERVICES
# =============================================

# Google Maps API Key (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# MapBox API Key (alternative mapping service)
NEXT_PUBLIC_MAPBOX_API_KEY=your-mapbox-api-key

# Enable GPS tracking for mobile inspections
NEXT_PUBLIC_ENABLE_GPS_TRACKING=true

# =============================================
# AI & ML FEATURES
# =============================================

# OpenAI API Key (for AI-powered compliance detection)
OPENAI_API_KEY=sk-your-openai-api-key

# Azure Computer Vision (for image analysis)
AZURE_COMPUTER_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_COMPUTER_VISION_KEY=your-azure-cv-key

# Enable AI features
NEXT_PUBLIC_ENABLE_AI_COMPLIANCE=true
NEXT_PUBLIC_ENABLE_COMPUTER_VISION=true

# =============================================
# NOTIFICATION SERVICES
# =============================================

# Email service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# SMS service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push notifications (Firebase)
FIREBASE_SERVER_KEY=your-firebase-server-key
NEXT_PUBLIC_FIREBASE_CONFIG={"apiKey":"...","authDomain":"..."}

# =============================================
# SECURITY
# =============================================

# JWT Secret for API authentication
JWT_SECRET=your-jwt-secret-key

# CORS settings
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# CSP (Content Security Policy) settings
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# =============================================
# MONITORING & ANALYTICS
# =============================================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# =============================================
# DEPLOYMENT
# =============================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# CDN URL (for static assets)
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# =============================================
# FEATURE FLAGS
# =============================================

# Enable/disable features for different environments
NEXT_PUBLIC_ENABLE_VBA_CALENDAR=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_VOICE_DICTATION=true
NEXT_PUBLIC_ENABLE_DIGITAL_SIGNATURES=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_MOBILE_CAMERA=true

# Debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================

# Stripe (for payments if needed)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# DocuSign (for digital signatures)
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_SECRET_KEY=your-docusign-secret-key

# Weather API (for VBA weather widget)
WEATHER_API_KEY=your-weather-api-key

# =============================================
# CACHE CONFIGURATION
# =============================================

# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600  # 1 hour

# =============================================
# BACKUP & SYNC
# =============================================

# S3 Bucket for backups
S3_BACKUP_BUCKET=your-backup-bucket
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM